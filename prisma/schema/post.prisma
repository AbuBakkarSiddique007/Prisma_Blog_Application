model Post {
    id         String     @id @default(uuid())
    title      String     @db.VarChar(250)
    content    String     @db.Text
    thumbnail  String?
    isFeatured Boolean    @default(false)
    status     PostStatus @default(PUBLISHED)
    tags       String[]
    views      Int
    authorId   String
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt

    comments Comment[]

    @@index([authorId])
    @@map("posts")
}

enum PostStatus {
    DRAFT
    PUBLISHED
    ARCHIVED
}
